{% extends 'base.html.twig' %}

{% block title %}Statut index{% endblock %}

{% block body %}
    <h1>Statut index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Labelle</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.id }}</td>
                <td>{{ statut.labelle }}</td>
                <td>
                    {{ include('statut/_delete_form.html.twig') }}
                    {% if userRole != 'Enseignant'  %}
                    <a href="{{ path('app_statut_edit', {'id': statut.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if userRole != 'Enseignant'  %}
    <a href="{{ path('app_statut_new') }}">Create new</a>
    {% endif %}
{% endblock %}
