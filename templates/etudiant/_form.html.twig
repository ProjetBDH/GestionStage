<form method="POST" action="{% if button_label == 'Update' %}
    {{ path('app_etudiant_edit', {'id': etudiant.id}) }}
    {% else %}
        {{ path('app_etudiant_new') }}
    {% endif %}" class="container mt-4">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="form-group">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
