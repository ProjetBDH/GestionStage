{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <h1>Role index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Labelle</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.labelle }}</td>
                <td>
                    {{ include('role/_delete_form.html.twig') }}
                    {% if userRole != 'Enseignant' %}
                        <a href="{{ path('app_role_edit', {'id': role.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_role_new') }}">Create new</a>
{% endblock %}
