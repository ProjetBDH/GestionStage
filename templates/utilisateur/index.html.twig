{% extends 'base.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.username }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>
                    {{ include('utilisateur/_delete_form.html.twig') }}
                    <br>
                    {% if userRole != 'Enseignant'  %}
                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="boutton">Editer</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if userRole != 'Enseignant'  %}
    <a href="{{ path('app_utilisateur_new') }}" class="boutton">Créer un nouveau utilisateur</a>
    {% endif %}
{% endblock %}
